<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AsociaciónPedrajeraDePeñas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AsociaciónPedrajeraDePeñas" parent="Base.Theme.AsociaciónPedrajeraDePeñas" />

    <style name="Theme.AsociaciónPedrajeraDePeñas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AsociaciónPedrajeraDePeñas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AsociaciónPedrajeraDePeñas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomAlertDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:background">@color/grisOscuro</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton">
        <item name="android:textColor">@color/verdePrincipal</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>