<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/dialogo_redondeado_gris"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tituloDialogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Unirse a peña"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mensajeDialogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="¿Deseas realizar una solicitud para unirte a la peña?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingEnd="16dp"
            android:text="Cancelar"
            android:textColor="@color/verdePrincipal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Aceptar"
            android:textColor="@color/verdePrincipal"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>