<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="40dp"
    android:background="@drawable/dialogo_redondeado_blanco"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgPena"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/outline_image_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombrePena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:paddingBottom="4dp"
            android:text="Nombre de la peña"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMasInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:text="Más información"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:strokeColor="@color/verdePrincipal"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnUnirse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.37"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/verdePrincipal"
                android:padding="8dp"
                android:text="Unirse"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
